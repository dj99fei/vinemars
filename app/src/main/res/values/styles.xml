<resources>

    <style name="Widget.AppCompat.ActionBar.MoboPickActionBar">
        <item name="background">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:titleTextStyle"> @style/TextAppearance.AppCompat.Widget.Base.ActionBar.Title.Inverse </item>
        <item name="backgroundSplit">@android:color/transparent</item>
        <item name="android:backgroundSplit">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="TextAppearance.AppCompat.Widget.ActionBar.Title.MoboPickTitle">
    </style>

    <!-- EditText -->
    <style name="Widget.EditText" parent="android:Widget.EditText">
        <item name="android:layout_height">@dimen/edit_height</item>
        <item name="android:minHeight">@dimen/edit_height</item>
        <item name="android:background">@drawable/shape_editbox</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <!-- EditText end -->
    <style name="Widget.Button" parent="@android:style/Widget.Button"/>

    <style name="Widget" parent="@android:style/Widget"/>
    <style name="Widget.TextView" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@null</item>
        <item name="android:textAppearance">@style/TextAppearance.Medium</item>
    </style>


    <style name="Widget.Line" >
        <item name="android:background">@android:color/darker_gray</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1.0dp</item>
    </style>

    <style name="Widget.Button.Green">
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:minWidth">140dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minHeight">@dimen/green_button_height</item>
        <item name="android:layout_height">@dimen/green_button_height</item>
        <item name="android:textColor">@null</item>
        <item name="android:textAppearance">@style/TextAppearance.Medium.White</item>
    </style>

    <style name="TextAppearance" parent="@android:style/TextAppearance">
    </style>

    <style name="TextAppearance.Large">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="TextAppearance.Medium">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="TextAppearance.Small">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">?android:attr/textColorTertiary</item>
    </style>

    <style name="TextAppearance.Small.Tab">
        <item name="android:textColor">@drawable/txt_tab</item>
    </style>

    <style name="TextAppearance.Medium.White">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextAppearance.Large.Welcome">
        <item name="android:textColor">#909090</item>
    </style>


    <!-- Animation -->
    <style name="Animation" parent="@android:style/Animation"/>

    <style name="Animation.Activity" parent="@android:style/Animation.Activity">
        <item name="@android:activityOpenEnterAnimation">@anim/slide_right_in</item>
        <item name="@android:activityOpenExitAnimation">@anim/scale_out</item>
        <item name="@android:activityCloseEnterAnimation">@anim/scale_in</item>
        <item name="@android:activityCloseExitAnimation">@anim/slide_left_out</item>
        <item name="@android:fragmentOpenEnterAnimation">@anim/slide_right_in</item>
        <item name="@android:fragmentOpenExitAnimation">@anim/scale_out</item>
        <item name="@android:fragmentCloseEnterAnimation">@anim/scale_in</item>
        <item name="@android:fragmentCloseExitAnimation">@anim/slide_left_out</item>
    </style>
    <!-- Animation end -->

    <style name="Dialog" parent="@android:style/Theme.Dialog"/>

    <style name="Dialog.Signin">
        <item name="android:windowAnimationStyle">@style/Animation.Dialog.Signin</item>
        <item name="android:windowBackground">@color/bg</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>

    <style name="Animation.Dialog" parent="@android:style/Animation.Dialog" />

    <style name="Animation.Dialog.Signin">
        <item name="android:windowEnterAnimation">@anim/push_down_in</item>
        <item name="android:windowExitAnimation">@anim/push_down_out</item>
    </style>
</resources>
