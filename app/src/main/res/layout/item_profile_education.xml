<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_inner_padding_horizontal_small"
        android:layout_marginRight="@dimen/layout_inner_padding_horizontal_small"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/layout_padding_horizontal"
            android:paddingRight="@dimen/layout_padding_horizontal">

            <include layout="@layout/include_item_profile_title"/>

            <TextView
                style="@style/Widget.Line"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>