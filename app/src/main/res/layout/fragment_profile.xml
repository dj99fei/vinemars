<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="false"
    >

    <android.support.v7.widget.RecyclerView
        android:id="@id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"/>

    <LinearLayout
        android:id="@id/layout_profile_tabs"
        android:layout_width="match_parent"
        android:background="@android:color/white"
        android:layout_height="@dimen/profile_header_tabs_height">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@id/profile_tabs"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bg_radio_group_tab"
                android:button="@null"
                android:textAppearance="@style/TextAppearance.Large"
                android:padding="@dimen/layout_inner_padding_horizontal_small"
                android:id="@id/profile_tabs_about"
                android:text="@string/about"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bg_radio_group_tab"
                android:button="@null"
                android:padding="@dimen/layout_inner_padding_horizontal_small"
                android:text="@string/relationship"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bg_radio_group_tab"
                android:button="@null"
                android:minWidth="@dimen/profile_header_tabs_min_width"
                android:padding="@dimen/layout_inner_padding_horizontal_small"
                android:text="@string/production"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bg_radio_group_tab"
                android:button="@null"
                android:minWidth="@dimen/profile_header_tabs_min_width"
                android:padding="@dimen/layout_inner_padding_horizontal_small"
                android:text="@string/schedule"/>
        </RadioGroup>

    </LinearLayout>

</RelativeLayout>