<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
        android:id="@id/instruction_login_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/layout_inner_padding_horizontal"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/pager"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@id/indicator1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/indicator_point_gray"/>

            <ImageView
                android:id="@id/indicator2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:src="@drawable/indicator_point_gray"/>

            <ImageView
                android:id="@id/indicator3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:src="@drawable/indicator_point_gray"/>

            <ImageView
                android:id="@id/indicator4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:src="@drawable/indicator_point_gray"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_inner_padding_vertical"
            >

            <Button
                android:layout_width="0dp"
                android:id="@id/btn_signin"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/action_sign_in"/>
            <TextView
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:paddingBottom="10dp"
                android:text="|"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@id/btn_signup"
                android:background="@drawable/apptheme_btn_default_holo_light"
                android:text="@string/action_sign_up"/>
        </LinearLayout>
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/instruction_login_layout"/>

</RelativeLayout>