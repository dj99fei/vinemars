<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/layout_padding_horizontal"
            android:paddingRight="@dimen/layout_padding_horizontal"
            android:orientation="vertical" >
            <include layout="@layout/include_item_profile_title"/>
            <TextView
                style="@style/Widget.Line"/>
            <TextView
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:text="程飞"
                android:drawableLeft="@drawable/ic_weixin"
                android:drawablePadding="@dimen/layout_inner_padding_horizontal_small"
                android:layout_height="@dimen/profile_item_text_height"/>
            <TextView
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:text="爪哇小虾"
                android:drawableLeft="@drawable/ic_weibo"
                android:drawablePadding="@dimen/layout_inner_padding_horizontal_small"
                android:layout_height="@dimen/profile_item_text_height"/>
            <TextView
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:id="@id/item_profile_mail"
                android:text="mailto:dj99fei@gmail.com"
                android:drawableLeft="@drawable/ic_mail"
                android:drawablePadding="@dimen/layout_inner_padding_horizontal_small"
                android:layout_height="@dimen/profile_item_text_height"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>