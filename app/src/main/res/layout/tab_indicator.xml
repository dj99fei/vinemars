<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center_horizontal"
    android:background="@drawable/bg_tab"
    >

    <TextView
        android:id="@+id/tab_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/txt_bottom"
        android:paddingTop="@dimen/icon_top"
        android:gravity="center"
        android:drawableTop="@drawable/ic_tab_find"
        android:drawablePadding="@dimen/txt_icon"
        android:focusable="true"
        android:textSize="@dimen/tab_text"
        android:textColor="@drawable/txt_tab" />

</RelativeLayout>